<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="68dp"
  android:layout_alignParentBottom="true"
  >
  <RelativeLayout
  android:id="@+id/layBottomBar"
  android:layout_width="fill_parent"
  android:layout_height="68dp"
  android:background="@drawable/bottom_bg"
  >
  <ImageView 
  android:id="@+id/ivBottomIcon"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@mipmap/icon_big"
  android:layout_marginLeft="5dp"
  android:layout_centerVertical="true"
   />
  <TextView 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/WelcomeInfo"
  android:layout_toRightOf="@id/ivBottomIcon"
  android:textColor="@color/white"
  android:padding="4dp"
  android:layout_centerVertical="true"
   />
  <ImageView 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@mipmap/main_btn"
  android:layout_alignParentRight="true"
  android:layout_marginRight="20dp"
  android:layout_centerVertical="true"
   />
  </RelativeLayout>
  <LinearLayout
  android:id="@+id/layBottomListViewBox"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@id/layBottomBar"
  >
  <ListView android:id="@+id/lvSlideList"
  style="@style/StyleListView"
   />
  </LinearLayout>
</RelativeLayout>
